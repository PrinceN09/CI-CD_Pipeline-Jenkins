pipeline {
    agent { docker { image 'maven:3-amazoncorretto-17-debian' } }
    
    tools {
        maven 'Maven' // Use the Maven tool configured with the label 'Maven'
    }

    stages {
        stage('SonarQube Scan') {
            steps {
                script {
                    withSonarQubeEnv('SonarqubeID') {
                        sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=PrinceN09_week16-code'
                    }
                }
            }
        }

        stage('All Maven Commands') {
            steps {
                dir('your_project_directory') {
                    // Run various Maven commands: clean, test, compile, install, package
                    sh 'mvn clean test compile install package'
                }
            }
        }

        stage('Upload Artifact') {
            steps{
                sh 'curl -u admin:AP5mZ1TGxbfJg5s8o7m1rRSRP4i -T \
                your_project_directory/target/bio*.jar \
                "http://35.173.177.111:8081/artifactory/geoapp/"'
            }
        }
    }
}
