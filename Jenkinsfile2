pipeline {
    agent any
    
    tools {
        maven 'M2_HOME' // Use the Maven tool configured with the label 'M2_HOME'
    }

    stages {
        stage('sonarqube scan') {
            steps {
                sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=PrinceN09_week16-code' // Run SonarQube analysis using Maven
            }
        }

        stage('all maven commands') {
            steps {
                // Run various Maven commands: clean, test, compile, install, package
                sh 'mvn clean test compile install package'
            }
        }
    }
}